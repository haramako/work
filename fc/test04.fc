function ppu_put( addr:int*, size:int ):int
{
  var i:int = 0;
  while( i < size ){
    PPU_DATA = addr[i];
    i += 1;
  }
  return 0;
}

function ppu_fill( size:int, num:int ):int
{
  var i:int = 0;
  while( i < size ){
    PPU_DATA = num;
    i += 1;
  }
  return 0;
}

function ppu_print( str:int* ): int
{
  var i:int = 0;
  while( str[i] ){
    PPU_DATA = str[i];
    i += 1;
  }
  return 0;
}
