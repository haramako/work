	public function action_view($id = null)
	{
		$data['appli'] = Model_Appli::find($id);

		is_null($id) and Response::redirect('admin/appli');

		$text = $data['appli']->description.$data['appli']->description;
		Spider_Collector::has_moe_word('');
		preg_match( Spider_Collector::$moe_regexp, $text, $match );
		if( $match ){
			$data['match'] = $match[0];
		}else{
			$data['match'] = '';
		}

		$this->template->title = "Appli";
		$this->template->content = View::forge('admin/appli/view', $data);

	}

	public function action_create()
	{
		if (Input::method() == 'POST')
		{
			$val = Model_Appli::validate('create');
			
			if ($val->run())
			{
				$appli = Model_Appli::forge(array(
					'platform' => Input::post('platform'),
					'original_id' => Input::post('original_id'),
					'title' => Input::post('title'),
					'author' => Input::post('author'),
					'icon' => Input::post('icon'),
					'screenshot' => Input::post('screenshot'),
					'description' => Input::post('description'),
					'release_data' => Input::post('release_data'),
					'price' => Input::post('price'),
					'category' => Input::post('category'),
					'rate' => Input::post('rate'),
				));

				if ($appli and $appli->save())
				{
					Session::set_flash('success', 'Added appli #'.$appli->id.'.');

					Response::redirect('admin/appli');
				}

				else
				{
					Session::set_flash('error', 'Could not save appli.');
				}
			}
			else
			{
				Session::set_flash('error', $val->error());
			}
		}

		$this->template->title = "Applis";
		$this->template->content = View::forge('admin/appli/create');

	}

	public function action_edit($id = null)
	{
		is_null($id) and Response::redirect('admin/ppli');

		$appli = Model_Appli::find($id);

		$val = Model_Appli::validate('edit');

		if ($val->run())
		{
			$appli->platform = Input::post('platform');
			$appli->original_id = Input::post('original_id');
			$appli->title = Input::post('title');
			$appli->author = Input::post('author');
			$appli->icon = Input::post('icon');
			$appli->screenshot = Input::post('screenshot');
			$appli->description = Input::post('description');
			$appli->release_data = Input::post('release_data');
			$appli->price = Input::post('price');
			$appli->category = Input::post('category');
			$appli->rate = Input::post('rate');

			if ($appli->save())
			{
				Session::set_flash('success', 'Updated appli #' . $id);

				Response::redirect('admin/appli');
			}

			else
			{
				Session::set_flash('error', 'Could not update appli #' . $id);
			}
		}

		else
		{
			if (Input::method() == 'POST')
			{
				$appli->platform = $val->validated('platform');
				$appli->original_id = $val->validated('original_id');
				$appli->title = $val->validated('title');
				$appli->author = $val->validated('author');
				$appli->icon = $val->validated('icon');
				$appli->screenshot = $val->validated('screenshot');
				$appli->description = $val->validated('description');
				$appli->release_data = $val->validated('release_data');
				$appli->price = $val->validated('price');
				$appli->category = $val->validated('category');
				$appli->rate = $val->validated('rate');

				Session::set_flash('error', $val->error());
			}

			$this->template->set_global('appli', $appli, false);
		}

		$this->template->title = "Applis";
		$this->template->content = View::forge('admin/appli/edit');

	}

	public function action_delete($id = null)
	{
		if ($appli = Model_Appli::find($id))
		{
			$appli->delete();

			Session::set_flash('success', 'Deleted appli #'.$id);
		}

		else
		{
			Session::set_flash('error', 'Could not delete appli #'.$id);
		}

		Response::redirect('admin/appli');

	}


	public function action_change_status($id)
	{
		$appli = Model_Appli::find($id);
		$appli->status = Input::get('val','');
		$appli->save();
		return 'ok';
	}
}
