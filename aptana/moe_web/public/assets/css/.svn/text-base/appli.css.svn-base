@charset "UTF-8";

@import url("./basic.css");

ul {
	width								: 640px;
}

li {
	width								: 620px;
	height							: auto;
	padding							: 10px;
		float								: left;
}

/*=============================================================================
■ul#main

=============================================================================*/
ul#main {
	width								: 640px;
	height							: auto;
   min-height: 920px;
   margin: 0 auto;
}

li#appinfo {
}

li#appinfo > div {
	float								: left;
}

li#appinfo div#app_icon {
	width								: 144px;
	height							: 144px;
}

li#appinfo div#app_icon div.icon_frame {
	width								: 128px;
	height							: 128px;
	padding							: 7px;
	border-radius					: 16px;
	border							: 1px solid #d0d0d0;
	background-image				: url(../img/bg_frame.png);
	margin-bottom					: 10px;
}

li#appinfo div#app_icon div.icon_frame img {
	width								: 100%;
	height							: 100%;
	border-radius					: 5px;
}

/*-----------------------------------------------------------------------------
■div#app_price
アプリのメイン情報を表示する領域の設定
-----------------------------------------------------------------------------*/
li#appinfo div#body {
	width								: 335px;
	height							: auto;
	margin							: 0px 15px;
	padding-top						: 15px;
}

/*-----------------------------------------------------------------------------
■div#app_price
アプリの種類を表示。1行で表示できないときは終端を切る。
-----------------------------------------------------------------------------*/
li#appinfo div#app_category {
	color								: #4d4d4d;
	font-size						: 14pt;
}

/*-----------------------------------------------------------------------------
■div#app_price
アプリ名を表示。1行で表示できないときは終端を切る。
-----------------------------------------------------------------------------*/
li#appinfo div#app_name {
	width								: 100%;
	padding							: 0px;
	font-weight						: bold;
	color								: #333333;
	font-size						: 22pt;
}

/*-----------------------------------------------------------------------------
■div#app_price
アプリの価格を表示
-----------------------------------------------------------------------------*/
li#appinfo div#app_price {
	width								: 100%;
	padding							: 0px;
	font-weight						: bold;
	color								: #e15949;
	font-size						: 18pt;
}

li#appinfo div#app_download {
	width								: 100%;
	text-align						: center;
	padding							: 0px;
	font-weight						: bold;
	color								: #e15949;
	font-size						: 14pt;
}

li#appinfo .download_button {
	width: 640px;
	height: 140px;
}





li#appinfo div#moe_button {
	width								: 100px;
	height							: 144px;
	text-align						: center;
	padding-top						: 15px;
}

.moe_count {
   margin-top: 8px;
   font-size: 14px;
   text-align: center;
   color: #f08080;
}

li#thumbnail {
	width								: 620px;
	height							: 200px;
	background						: #4e4e4e;
	overflow						: hidden;
	white-space						: nowrap;
   text-align: center;
}

li#thumbnail .thumbnail-cover {
   z-index: 1;
   margin: -10px -10px;
   position: absolute;
   background: -webkit-gradient(radial, 50% 50%, 200, 50% 50%, 300, from(rgba(80,80,80,0)),to(#4e4e4e) );
   width: 640px;
   height: 220px;
}

li#thumbnail img.screenshot {
   max-height: 100%;
	background						: #4e4e4e;
}

li#description {
	width								: 620px;
}

li#description ul {
	width								: 620px;
	margin: 0px auto;
}

li#description ul li {
	padding							: 10px;
	display							: inline-block;
}

li#description ul li#title_img {
	float: left;
	width								: 60px;
	height							: 100px;
	text-align						: center;
}

li#description ul li#body {
	float: left;
	width							: 480px;
/*	height							: 100px;*/
	margin-bottom: 120px;
	font-size						: 14pt;
}

