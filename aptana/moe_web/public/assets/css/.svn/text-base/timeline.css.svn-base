/** 
 * 次のページを読み込む
 */
div.timeline_pagerize {
	margin: 120px 10px 10px 10px;
   padding: 20px 120px;
	border-radius: 8px;
	clear: both;
	widht: 620px;
	border: 2px dashed #bbb;
	text-align: center;
}

div.timeline_pagerize a {
   font-size: 22pt;
   color: #888888;
}
   