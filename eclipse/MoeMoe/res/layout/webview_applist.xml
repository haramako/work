<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:id="@+id/moemoe_webview_parent"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@drawable/titleindicator_background_repeat"
			android:visibility="invisible">

			<com.glpgs.android.moeapps.view.MoeMoeWebView
				android:id="@+id/moemoe_webview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fadingEdge="vertical"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/network_error_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical"
			android:background="@drawable/titleindicator_background_repeat"
			android:visibility="invisible">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp"
				android:text="@string/error_reload_message"
				android:textColor="#ff000000"
				android:layout_marginBottom="20dp"/>
			<Button
				android:id="@+id/reload_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/basic_button"
				android:text="@string/error_reload_button"
				android:onClick="onClickWebViewReload"/>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>