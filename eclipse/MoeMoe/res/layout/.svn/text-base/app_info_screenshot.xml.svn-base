<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/moe_main_view"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<FrameLayout
		android:id="@+id/app_info_screenshot_pearent_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<!-- アプリ情報のスクリーンショット -->
		<android.support.v4.view.ViewPager
			android:id="@+id/app_info_screenshot_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<Button
			android:id="@+id/do_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:background="@drawable/close_button"
			android:layout_gravity="right"/>

		<com.viewpagerindicator.CirclePageIndicator
			android:id="@+id/app_info_screenshot_indicator"
			android:padding="10dip"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_gravity="bottom"
			app:radius="8dp"
			app:fillColor="#FF323232"
			app:pageColor="#99eb695a"
			app:strokeColor="#FF404040"
			app:strokeWidth="3dp"/>
	</FrameLayout>
</LinearLayout>
